    "@types/node": "^12.0.0",
    "class-transformer": "^0.4.0",
    "class-validator": "^0.13.1",
    "koa": "^2.13.1",
    "koa-bodyparser": "^4.3.0",
    "koa-multer": "^1.0.2",
    "koa-router": "^7.4.0",
    "nodemon": "^1.19.0",
    "pm2": "^3.5.0",
    "reflect-metadata": "^0.1.13",
    "routing-controllers": "^0.9.0",
    "ts-node": "^8.1.0",
    "tsconfig-paths": "^3.8.0",
    "typescript": "^3.4.5"
