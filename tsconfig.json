{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noImplicitAny": true, /* 是否默认禁用 any */
    "skipLibCheck": true,
    "declaration": false,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node", /* 引入 inversify */
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./src",
    /* 配置 import 路径,更优雅简洁的导入模块*/
    "paths": {
      "@model/*":["action/live/model/*"],
      "@service/*":["action/live/service/*"],
      "@repository/*":["action/live/repository/*"],
      "@controller/*":["action/live/controller/*"],
      "@errors/*":["action/live/errors/*"],
      "@common/*":["action/live/common/*"],
      "@config/*":["action/live/config/*"],
      "@dto/*":["action/live/dto/*"],
    }
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*"]
}
